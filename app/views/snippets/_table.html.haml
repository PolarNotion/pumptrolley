%table.table
  %thead
    %tr
      %th{ colspan: 3 }
        Name
  %tbody
    - if snippets.present?
      - snippets.each do |snippet|
        %tr
          %td
            = link_to snippet.name, snippet
            - if snippet.is_featured
              %sup.text-yellow
                .fa.fa-star

          %td
            - snippet.tags.split(",").each do |tag|
              = link_to tag, url_for(tag: tag), class: "small"
          %td.text-right
            = link_to snippet_url(snippet, format: :rb), target: "_blank", class: "btn text-muted btn-sm" do
              .fa.fa-code
              source
            = link_to snippet_url(snippet), class: "btn text-muted btn-sm" do
              show
    - else
      %tr
        %td.text-center{ colspan: 3 }
          %em
            = nil_notice
