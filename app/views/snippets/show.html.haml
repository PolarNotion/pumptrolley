%h1
  = @snippet.name

- if @snippet.followup_content.present?
  %p
    %b Followup content:
    = @snippet.followup_content

%ul.list-inline.text-right
  - @snippet.tags.split(",").each do |tag|
    %li
      = link_to tag, url_for(tag: tag)
%p
  %b Registration url:
  = @snippet.registration_url
%p
  %b Documentation url:
  = @snippet.documentation_url
%p
  %b Is private:
  = @snippet.is_private
%p
  %b Parent:
  = @snippet.parent_id
%p
  %b Author:
  = @snippet.author.email if @snippet.author

= link_to 'Edit', edit_snippet_path(@snippet), class: "btn btn-default btn-sm"
= link_to "View Source", snippet_url(format: :rb), target: "_blank", class: "btn btn-default btn-sm"
