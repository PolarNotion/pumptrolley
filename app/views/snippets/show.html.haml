%h1.text-center
  = @snippet.name

- if @snippet.followup_content.present?
  %p
    %b Followup content:
    = @snippet.followup_content

%ul.list-inline.text-center
  - @snippet.tags.split(",").each do |tag|
    %li
      = link_to tag, url_for(tag: tag)

%hr

- if @snippet.registration_url.present?
  %p.text-center
    %b Registration:
    %br
    = @snippet.registration_url

- if @snippet.documentation_url.present?
  %p.text-center
    %b Documentation:
    %br
    = link_to @snippet.documentation_url

%p.text-center
  %b Author:
  %br
  = @snippet.author.email if @snippet.author

.text-center
  = link_to 'Edit', edit_snippet_path(@snippet), class: "btn text-muted btn-sm"
  = link_to snippet_url(format: :rb), target: "_blank", class: "btn text-muted btn-sm" do
    .fa.fa-code
    source
